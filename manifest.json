{
	"mainfest_version": 2,

	"name": "RefererModifier",
	"description": "This extension can change the http request referer to what you want.",
	"version": "1.0",

	"permissions": [
		"activeTab", 
		"contextMenus",
		"webRequestBlocking", 
		"webRequest", 
		"<all_urls>"
	],

	"browser_action": {
		"default_title": "Change request referer",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}