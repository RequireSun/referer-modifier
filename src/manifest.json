{
	"manifest_version": 2,

	"name": "RefererModifier",
	"description": "This extension can change the http request referer to what you want.",
	"version": "1.0",

	"permissions": [
		"activeTab", 
		"contextMenus",
		"webRequestBlocking", 
		"webRequest", 
		"<all_urls>"
	],

	"icons": {
		"16": "image/logo16.png",
		"48": "image/logo48.png",
		"128": "image/logo128.png"
	},

	"browser_action": {
		"default_title": "Change request referer",
		"default_popup": "popup.html"
	},

    "background": { 
    	"scripts": [
    		"background.js"
    	]
    }
}